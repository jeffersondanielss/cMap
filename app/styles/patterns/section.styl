.section
  background: #FFFFFF
  position: relative
  z-index $primary-layer
  margin: 50px auto 50px
  padding: 100px

  &__map,
  &__text
    width 50%
    float: left

  &__title
    font-weight: 700
    font-size: 30px
    text-transform: uppercase
    color: $primary-color
    margin-bottom: 10px

  &__description
    margin-bottom: 40px


.section--left
  .section__map
    padding-right: $section-padding

  .section__text
    padding: 50px 0 0 $section-padding

  .box__map
    float: right
  

.section--right
  background-color: #f5f5f5

  .section__map
    padding-left: $section-padding

  .section__text
    padding: 50px $section-padding 0 0px
    text-align: right

  .box__map
    float: left