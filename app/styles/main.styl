@import 'patterns/variables'
@import 'patterns/fonts'
@import 'patterns/reset'
@import 'patterns/section'

.header
  width: 100%
  height: 400px
  background: red;

.box__map
  width: 500px;
  height: 300px;
  border-radius: 5px;
  box-shadow: 0 14px 28px rgba(0,0,0,0.25), 0 10px 10px rgba(0,0,0,0.22);

    
.wrapper
  width: 80%
  max-width: 1440px
  margin: 0 auto
  clear: both
    
.footer
  width: 100%
  text-align: center
  margin-bottom: 40px
  
  &__link
    display: inline-block
    padding: 0 20px
    color: $primary-color
    font-weight: bold

@media screen and (max-width: 1000px)
  .wrapper
    width: 90%

  .content__steps
    width: 100%
    margin-bottom: 60px


@media screen and (max-width: 620px)
  .header, .header__map
    height: 200px
    
  .get-started
    margin-top: 220px
